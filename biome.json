{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "files": {
    "maxSize": 4194304
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "useBlockStatements": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "options": {
            "functions": ["clsx", "cva", "tw", "tw.*"],
            "attributes": ["classList"]
          }
        }
      }
    },
    "ignore": ["/node_modules", "/.next"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 140,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
